<%-include("../partials/header" )%>
	<div class="jumbotron mt-3">
		<h1 class="display-4">The Art Store Gallery</h1>
		<p class="lead">View Eastern Visayas Finest Gallery</p>
		<hr class="my-4">
		<a class="btn btn-primary btn-lg" href="/artgallery/new" role="button">Add New Art</a>
	</div>
	<div class="container" id="card-container">
		<div class="row">
			<%artgallery.forEach((x)=>{ %>
				<div class="col-sm-6 col-md-4 col-lg-3 mb-3">
				  	<div class="card">
					  	<img class="card-img-top" src="<%=x.image%>" class="" alt="">
					  	<div class="card-body">
							<h5><strong><%=x.title %></strong></h5>
							<a class="btn btn-primary btn-sm"href="/artgallery/<%=x._id%>" class="">More info</a>
						</div>
					</div>
				</div>
			<% }); %>
		</div>
	</div	>
<%-include("../partials/footer")%>