<!DOCTYPE html>
<html lang="en">
<head>
	<!-- bootstrap required meta-tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- bootstrap css -->
	<link rel="stylesheet" type="text/css" href="/assets/bootstrap/4.5.2/css/bootstrap.min.css">
	<!-- bootstrap required javascripts -->
	<!-- jquery -->
	<script type="text/javascript" src="/assets/js/libs/jquery/jquery-3.5.1.min.js"></script>
	<!-- bootstrap js bundle (with popper included) -->
	<script type="text/javascript" src="/assets/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
	<!-- Custom Stylesheet -->
	<link rel="stylesheet" type="text/css" href="/assets/css/style.css">
	<%if(typeof page !== 'undefined' && (page === 'signup' || page === 'login')){%>
		<!-- Auth Style -->
		<link rel="stylesheet" type="text/css" href="/assets/css/auth.css">
	<%}%>
	<title>The Art Store Gallery</title>
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
		<div class="container">
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<a class="navbar-brand" href="/">The Art Store Gallery</a>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item <%=typeof page !== 'undefined' && page === 'artgallery' ? 'active' : ''%>">
						<a class="nav-link" href="/artgallery">Home <span class="sr-only">(current)</span></a>
					</li>
				</ul>

				<ul class="navbar-nav ml-3">
					<%if(!currentUser){%>
						<li class="nav-item <%=typeof page !== 'undefined' && page === 'artgallery' ? 'active' : ''%>">
							<a class="nav-link" href="/login">Login <span class="sr-only">(current)</span></a>
						</li>
						<li class="nav-item <%=typeof page !== 'undefined' && page === 'artgallery' ? 'active' : ''%>">
							<a class="nav-link" href="/signup">Sign-up <span class="sr-only">(current)</span></a>
						</li>
					<%} else {%>
						<li class="nav-item active">
							<a class="nav-link" href="#"><%=currentUser.username%> <span class="sr-only">(current)</span></a>
						</li>
						<li class="nav-item <%=typeof page !== 'undefined' && page === 'artgallery' ? 'active' : ''%>">
							<a class="nav-link" href="/logout">Logout <span class="sr-only">(current)</span></a>
						</li>
					<%}%>
				</ul>
			</div>
		</div>
	</nav>

	<!-- flash message.contianer -->
	<div class="container my-2">
		<%if(msg_error && msg_error.length > 0 ){%>
			<div class="alert alert-danger" role="alert">
				<%=msg_error%>
			</div>
		<% } %>
		
		<%if(msg_success && msg_success.length > 0 ){%>
			<div class="alert alert-success" role="alert">
				<%=msg_success%>
			</div>
		<% } %>
	</div>
	<!-- start.container -->
	<div class="container mb-5">