<%-include("../partials/header")%>
	<div class="text-center">
		<h1 class="mt-5">"<%=comment.art.title%>"</h1>
		<h3 class="">Edit Comment</h3>
	</div>
	<div class="mb-4" id="formtemplate">
		<form class="form-style" action="/artgallery/<%=artgallery_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
			<div class="form-group mb-3">
				<label for="commentTitle">Title</label>
				<input id="commentTitle" class="form-control" type="text" name="comment[title]" required placeholder="Comment Title.." value="<%=comment.title%>" style="font-weight: bold">
			</div>
			<div class="form-group mb-3">
				<label for="commentBody">Message</label>
				<textarea id="commentBody" class="form-control fixed" rows="5" name="comment[text]" placeholder="Write your comment here..." spellcheck="true" autofocus="true"><%=comment.text%></textarea>
			</div>
			<div class="form-group mb-3">
				<label for="inputUser">Author</label>
				<input class="form-control text-center" type="text" value="<%=comment.author.fullName%>" readonly>
			</div>
			<div class="form-group">
				<button class="btn btn-warning btn-lg btn-block">Update</button>
			</div>
			<a class="d-block" href="/artgallery/<%=artgallery_id%>">Go Back</a>
		</form>
	</div>
<%-include("../partials/footer")%>