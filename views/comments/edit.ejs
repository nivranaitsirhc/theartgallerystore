<%-include("../partials/header")%>
	<div class="col-md-12 text-center">
		<h1 class="my-6">Edit Comment</h1>
	</div>
	<div class="container justify-content-center" id="formtemplate">
		<form class="form-style" action="/artgallery/<%=artgallery_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<textarea class="form-control fixed" rows="5" name="comment[text]" placeholder="Write your comment here..." spellcheck="true" autofocus="true"><%=comment.text%></textarea>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" value="<%=comment.author.username%>" readonly>
			</div>
			<div class="form-group">
				<button class="btn btn-warning btn-lg btn-block">Update</button>
			</div>
			<a class="d-block" href="/artgallery/<%=artgallery_id%>">Go Back</a>
		</form>
		
	</div>
<%-include("../partials/footer")%>