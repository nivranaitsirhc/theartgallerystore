<%-include("../partials/header")%>
<div id="authtemplate" >
	<form class="form-signin" action="/signup" method="POST">
		<div class="text-center mb-4">
			<!-- <img class="mb-4" src="../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72"> -->
			<h1 class="h3 mb-3 font-weight-normal">New Account</h1>
		</div>
		<div class="form-label-group">
			<input name="newUser[firstName]" type="text" id="inputFname" class="form-control" placeholder="First Name" autofocus>
			<label for="inputFname">First Name</label>
		</div>

		<div class="form-label-group">
			<input name="newUser[middleName]" type="text" id="inputMname" class="form-control" placeholder="Middle Name (or Initial)"  autofocus>
			<label for="inputMname">Middle Name (or Initial)</label>
		</div>

		<div class="form-label-group">
			<input name="newUser[lastName]" type="text" id="inputLname" class="form-control" placeholder="Family Name" autofocus>
			<label for="inputLname">Family Name</label>
		</div>

		<div class="form-label-group">
			<input name="newUser[dateOfBirth]" type="date" id="inputDoB" class="form-control" placeholder="Date of Birth" autofocus>
			<label for="inputDoB">Date of Birth</label>
		</div>

		<div class="form-label-group">
			<input name="newUser[email]" type="email" id="inputEmail" class="form-control" placeholder="Email" autofocus>
			<label for="inputEmail">Email</label>
		</div>

		<div class="form-label-group">
			<input name="newUser[avatarUrl]" type="text" id="inputAvatarUrl" class="form-control" placeholder="Avatar Url" autofocus>
			<label for="inputAvatarUrl">Avatar Url</label>
		</div>

		<div class="form-label-group">
			<input name="newUser[username]" type="text" id="inputUsername" class="form-control" placeholder="Username" autofocus autocomplete="username" required="">
			<label for="inputUsername">Username</label>
		</div>

		<div class="form-label-group">
			<input name="newUser[password]" type="password" id="inputPassword" class="form-control" placeholder="Password" autofocus autocomplete="current-password" required="">
			<label for="inputPassword">Password</label>
		</div>

		<!-- <div class="checkbox mb-3">
			<label>
				<input type="checkbox" value="remember-me"> Remember me
			</label>
		</div> -->
		<button class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
		<p class="mt-5 mb-3 text-muted text-center">&copy; 2020</p>
	</form>
</div>
<%-include("../partials/footer")%>